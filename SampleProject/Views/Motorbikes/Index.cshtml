@model IEnumerable<SampleProject.Motorbike>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
    <p>
        @Html.ActionLink("Add New","Create",null,new {@class="btn btn-primary btn-lg"})
    </p>
    <table class="table">
        <tr>
            <th>
                Year
            </th>
            <th>
                Manufacturer
            </th>
            <th>
                Model
            </th>
            <th>
                Mileage
            </th>
            <th>
                Description
            </th>
            <th>
                Date added
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.MotorbikeID }) |
                @Html.ActionLink("Details", "Details", new { id=item.MotorbikeID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.MotorbikeID })
            </td>
        </tr>
    }
    
    </table>
        </div>
</body>
</html>
